{
  "name": "impet-theme",
  "version": "1.0.0",
  "description": "IMPET Białystok – skład opału | Węgiel ekogroszek, groszek, orzech, kostka",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "prestart": "npm run clear-dist && mkdirp ./static/dist",
    "start": "npm-run-all --parallel watch:css",
    "clear-dist": "rimraf ./static/dist",
    "copy-files": "npm run images:copy && npm run fonts:copy",
    "images:copy": "copyfiles -u 3 './static/src/img/**/*' './static/dist/img/' && npm run images:optimize && npm run images:create-sprite",
    "images:optimize": "svgo -f './static/dist/img' --disable=removeViewBox",
    "images:create-sprite": "svgstore -o static/dist/img/icons-sprite.svg static/dist/img/*.svg",
    "fonts:copy": "copyfiles -f './static/src/fonts/**/*' './static/dist/fonts/'",
    "watch:css": "nodemon -w ./static/src/sass -e sass -x 'npm run build:css'",
    "build:css": "npm run compile-sass && npm run postcss",
    "compile-sass": "node-sass --importer node_modules/node-sass-package-importer/dist/cli.js static/src/sass/main.sass static/dist/css/main.css",
    "postcss": "postcss ./static/dist/css/main.css -r -m -u autoprefixer -u cssnano"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamilradziszewski/impet-theme.git"
  },
  "author": "Kamil Radziszewski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kamilradziszewski/impet-theme/issues"
  },
  "homepage": "https://impet-bialystok.pl",
  "devDependencies": {
    "autoprefixer": "^8.5.1",
    "copyfiles": "^2.0.0",
    "cssnano": "^3.10.0",
    "foundation-sites": "^6.4.4-rc1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "node-sass-package-importer": "^5.1.3",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.0",
    "rimraf": "^2.6.2",
    "svgo": "^1.0.5",
    "svgstore-cli": "^1.3.1"
  },
  "dependencies": {
    "npm": "^6.1.0"
  }
}
